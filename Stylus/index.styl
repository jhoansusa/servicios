@font-face {
	font-family: "Flaticon";
	src: url("../font/flaticon.eot");
	src: url("../font/flaticon.eot#iefix") format("embedded-opentype"),
	url("../font/flaticon.woff") format("woff"),
	url("../font/flaticon.ttf") format("truetype"),
	url("../font/flaticon.svg") format("svg");
	font-weight: normal;
	font-style: normal;
}

@media only screen and (max-width: 768px) {
    
    #menu {
    display none
  }
}

body 
	background grisFondo
	font-family Arial
	font-size tamanoLetra
	
	.estrellita
		&:before
			content "\e000"
			font-family "Flaticon"
	
	footer
		background azulOscuro
		color white
		text-align center
		padding 0.8em 0
		margin-top: 3em
		
		h3
			font-size 14px
			font-weight normal
			
			&:after
				content "--"
				
			&:before
				content "--"						
	

	header 
		background azulOscuro
		color white		
		overflow hidden
		position relative
		
		.usuario-login
			background azulOscuro
			color width
			font-family Verdana,Helvetica
			font-size 15px
			border-width 0
		
		
		.header-logo	
			
			width 100px	
			float left	
			padding 1em

			img
				border-right 1px solid white
				height 70px
				width 80px
				padding 0.8em			

		.header-titulo
			font-size 16px
			margin 50px 0 0 200px
		
		.header-avatar					
			position absolute
			right 20px
			top 1px  		
			
			img
				border-radius 60%
				width 70px
				
	nav 
		background azulClaro
		border-left 10px solid white
		
		.menu-ppal
			height 40px
			line-height 40px
			margin 0
			
			li
				display inline-block
				
				a
					color white
					display inline-block
					padding 0 1em
					text-decoration none
					
					&:hover
						background rgba(black, 0.1)	
		
	section
				
		.avatar		
			width 100% -20px
			height 100px
			background #CEE3F6
			img
				border-radius 60%
				width 70px	
			
			
		.login
			 display block
			 margin 0 auto
			 padding 0.5em
			 width 500px
			 height 275px
			 border-style solid
			 border-width 4px
			 background white
			 border-color #5882FA
			 position relative
			 top 100px
			 box-shadow 10px 10px 5px #888888
			 border-radius 14px 14px 14px 14px
		.div-botones-login
				width 200px				
				height 125px
				padding-top 25px
				padding-left 90px
				
		.botones-login
			background white
			border-radius 9px

